                android:padding="8dp"
                android:text="информатика\nауд. 345"
                android:textColor="@android:color/black" />
        </TableRow>

        <!-- Table row for Saturday -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:text="СБ\nматематика\nауд. 429"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:text="общество\nауд. 268"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textColor="@android:color/black" />
        </TableRow>
    </TableLayout>
</LinearLayout>
