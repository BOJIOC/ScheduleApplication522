                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:text="ЧТ\nматематика\nауд. 429"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:text="русский язык\nауд. 360"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textColor="@android:color/black" />
        </TableRow>

        <!-- Table row for Friday -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:text="ПТ\nрусский язык\nауд. 360"
                android:textColor="@android:color/black" />

